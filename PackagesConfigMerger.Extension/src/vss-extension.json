{
    "manifestVersion": 1,
    "id": "packagesconfigmerger",
    "name": "Packages Config Merger",
    "version": "1.0.4",
    "author": "Alexander Schmid",    
    "description": "Allows the merging of a huge amount of packages.config across folders to only one.",
    "license": "MIT",
    "publisher": "AlexanderSchmid",
    "public": true,
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "categories": [
        "Azure Pipelines"
    ],
    "links": {
        "github": { 
            "uri": "https://github.com/DurtyFree" 
        },
        "repository": {
            "uri": "https://github.com/DurtyFree/Azure.DevOps.PackagesConfigMerger"
        },
        "issues": {
            "uri": "https://github.com/DurtyFree/Azure.DevOps.PackagesConfigMerger/issues"
        },
        "support": {
            "uri": "https://github.com/DurtyFree/Azure.DevOps.PackagesConfigMerger"
        }
    },
    "repository": {
      "type": "git",
      "uri": "https://github.com/DurtyFree/Azure.DevOps.PackagesConfigMerger"
    },
    "tags": [
        "nuget",
        "nuget-powertool",
        "PackagesConfigMerger",
        "versioning",
        "merger",
        "merging",
        "build",
        "packages",
        "packages.config",
        "optimization"
    ],
    "content": {
        "details": {
            "path": "readme.md"
        }
    },
    "icons": {
        "default": "images/Logo.png"        
    },
    "screenshots": [
        {
            "path": "images/screen.png"
        }
    ],
    "CustomerQnASupport": {
        "enableqna":"true"
    },
    "files": [
        {
            "path": "PackagesConfigMerger"
        }
    ],
    "contributions": [
        {
            "id": "PackagesConfigMerger",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "PackagesConfigMerger"
            }
        }
    ]
}